<idea-plugin>
    <id>com.pyc.cardanopyc_debugger</id>
    <name>CardanoPyC Debugger</name>
    <vendor url ="https://github.com/AIQUANT-Tech"> AIQUANT TECHNOLOGIES</vendor>

    <description><![CDATA[
        A sample plugin that supports for debugging haskell / smart contract.<br>
        <em>Developed with love using the IntelliJ Platform</em>
    ]]></description>

    <!-- Platform dependency (keep this) -->
    <depends>com.intellij.modules.platform</depends>


    <extensions defaultExtensionNs="com.intellij">
        <!-- You can add extensions here later -->

        <statusBarWidgetFactory implementation="com.pyc.cardanopyc_debugger.diagnostic.HaskellStatusBarFactory"/>

        <projectService serviceImplementation="com.pyc.cardanopyc_debugger.diagnostic.GhcidProcessHandler"/>
        <projectService serviceImplementation="com.pyc.cardanopyc_debugger.diagnostic.ProblemManager"/>
    </extensions>
    <projectListeners>
        <listener class="com.pyc.cardanopyc_debugger.diagnostic.FileOpenListener" topic="com.intellij.openapi.vfs.newvfs.BulkFileListener"/>
        <listener class="com.pyc.cardanopyc_debugger.diagnostic.FileChangeListener" topic="com.intellij.openapi.fileEditor.FileDocumentManagerListener"/>
    </projectListeners>

</idea-plugin>
